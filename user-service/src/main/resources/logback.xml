<configuration>
    <springProfile name="dev">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
        <appender name="all"
                  class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>/var/lib/jenkins/workspace/logs/user-service.log</file>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <Pattern>
                    <!--					[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n-->
                    [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} - [%F:%L] - %msg%n
                </Pattern>
            </encoder>

            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- rollover daily -->
                <fileNamePattern>/var/lib/jenkins/workspace/logs/user-service.%d{yyyy-MM-dd}.log.zip
                </fileNamePattern>
                <maxHistory>1200</maxHistory>

            </rollingPolicy>
        </appender>

        <logger name="com.shreegeeks" level="DEBUG"
                additivity="true">
            <appender-ref ref="all"/>
        </logger>
        <root>
            <level value="INFO"/>
            <appender-ref ref="all"/>

        </root>
    </springProfile>
</configuration>
